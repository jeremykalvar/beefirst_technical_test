# ----- App -----
APP_ENV=dev
LOG_LEVEL=INFO

# ----- Postgres -----
POSTGRES_USER=app
POSTGRES_PASSWORD=app
POSTGRES_DB=app
POSTGRES_PORT=5432
DATABASE_URL=postgresql://app:app@db:5432/app

# ----- Redis -----
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# ----- SMTP mock -----
SMTP_PORT=8025
SMTP_BASE_URL=http://smtp-mock:8025
SMTP_API_KEY=dev-mock

# ----- API -----
API_PORT=8000

# ----- Security / policies -----
BCRYPT_ROUNDS=12
CODE_TTL_SECONDS=60
CODE_ATTEMPTS=5
RESEND_THROTTLE_SECONDS=60

# ----- Worker -----
OUTBOX_POLL_INTERVAL_MS=500
